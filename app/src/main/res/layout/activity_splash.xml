<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_marginLeft="30dp"
    android:layout_marginRight="30dp"
    tools:context=".SplashActivity"
    xmlns:app="http://schemas.android.com/apk/res-auto">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:weightSum="2">

        <ImageView
            android:id="@+id/acmlogo_id"
            android:layout_width="wrap_content"
            android:layout_height="0dp"
            android:layout_centerHorizontal="true"
            android:layout_gravity="center"
            android:layout_weight="1"
            android:src="@drawable/logo200"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="0dp"
            android:layout_weight="1">

            <TextView

                android:id="@+id/broughtid"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Brought to you by"
                android:textAlignment="center"
                android:textSize="25sp" />

            <ImageView
                android:id="@+id/acmid"
                android:layout_marginLeft="30dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/broughtid"
                android:layout_marginTop="70dp"
                android:src="@drawable/acmlogo100" />

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="100dp"
                android:layout_below="@id/broughtid"
                android:layout_marginTop="70dp"
                android:layout_toRightOf="@id/acmid"
                android:src="@drawable/alumni100" />
        </RelativeLayout>
    </LinearLayout>
</RelativeLayout>